<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/twozero"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/onezero"
                android:theme="@style/EditTextviewStyle">

                <EditText
                    android:id="@+id/edtFullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fullname"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/onetwo"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/lightblack1"
                    app:errorEnabled="true" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twozero"
                android:theme="@style/EditTextviewStyle">

                <EditText
                    android:id="@+id/edtEmailId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email Id"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/onetwo"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/lightblack1"
                    app:errorEnabled="true" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twozero"
                android:theme="@style/EditTextviewStyle">

                <EditText
                    android:id="@+id/edtContactNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact No"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/onetwo"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/lightblack1"
                    app:errorEnabled="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twozero"
                android:theme="@style/EditTextviewStyle">

                <EditText
                    android:id="@+id/edtSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Subject"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/lightblack1"
                    android:textSize="@dimen/onetwo"
                    app:errorEnabled="true" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/border_round"
                android:gravity="left"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/edtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|top"
                    android:background="@null"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="left|top"
                    android:hint="Write Here"
                    android:inputType="text|textMultiLine|textCapSentences"
                    android:padding="5dp"
                    android:textColorHint="@color/transcolorOrange"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>


            <!-- <android.support.design.widget.TextInputLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/twozero"
                 android:theme="@style/EditTextviewStyle">

                 <EditText
                     android:id="@+id/edtDescription"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:hint="Description"
                     android:inputType="textLongMessage"
                     android:maxLines="1"
                     android:singleLine="true"
                     android:textSize="@dimen/onetwo"
                     app:errorEnabled="true" />

             </android.support.design.widget.TextInputLayout>
 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="@dimen/_25sdp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bg_orange_rounded_rectengle"
                    android:paddingLeft="@dimen/twofive"
                    android:paddingTop="@dimen/seven"
                    android:paddingRight="@dimen/twofive"
                    android:paddingBottom="@dimen/five"
                    android:text="SUBMIT"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/onetwo" />


                <!-- <Button
                     android:id="@+id/btnSubmit"
                     android:layout_width="@dimen/fourzero"
                     android:layout_height="@dimen/fourzero"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginLeft="@dimen/onezero"
                     android:layout_weight="2"
                     android:background="@drawable/bg_orange_rounded_corner"
                     android:text="SUBMIT"
                     android:textColor="@color/colorWhite"
                     android:textSize="@dimen/onezero" />-->
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/nineeight" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
