<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey8"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="true">


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:elevation="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_7sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/five">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="Currrent Status : "
                            android:textColor="@color/colorOrange"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/textVisibleMembers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:fontFamily="@font/poppinsregular"
                            android:gravity="center|left"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="segsgg"
                            android:textColor="@color/lightblack1"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/btnEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_green_rectengle_deselected"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="EDIT"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:elevation="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_7sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_5sdp"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/twofive"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="Password :"
                            android:textColor="@color/colorOrange"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tvPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="@font/poppinsregular"
                            android:gravity="center_vertical"
                            android:text="fjk"
                            android:textColor="@color/lightblack1"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btnSetPhotoPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="2"
                        android:background="@drawable/bg_green_rectengle_deselected"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:text="SET PHOTO PASSWORD"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/btnRemovePhotoPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="2"
                        android:background="@drawable/bg_green_rectengle_deselected"
                        android:fontFamily="@font/poppinsregular"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:text="REMOVE PHOTO PASSWORD"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/btnChangePhotoPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_orange_rounded_rectengle"
                        android:fontFamily="@font/poppinsregular"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:text="CHANGE PHOTO PASSWORD"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>
    <!--Bottom View-->


    <RelativeLayout
        android:id="@+id/relEditMembersView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red_transperant"
        android:orientation="vertical"
        android:visibility="gone">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/linSlidingDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14sdp"
                    android:text="Photo Visibility Settings"/>

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioHiddenAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorOrange"
                        android:checked="true"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/lightblack1"
                        android:textSize="@dimen/_12sdp"
                        android:text="Hidden for All"/>

                    <RadioButton
                        android:id="@+id/radioAllMembers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorOrange"
                        android:checked="false"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Visible to All Memberss"
                        android:textColor="@color/lightblack1"
                        android:textSize="@dimen/_12sdp" />

                    <RadioButton
                        android:id="@+id/radioPaidMembers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorOrange"
                        android:checked="false"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Visible to Paid Memberss"
                        android:textColor="@color/lightblack1"
                        android:textSize="@dimen/_12sdp" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <!--android:layout_marginTop="@dimen/onezero"-->

                    <TextView
                        android:id="@+id/btnClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_orange_rounded_rectengle"
                        android:gravity="center"
                        android:paddingLeft="@dimen/twofive"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingRight="@dimen/twofive"
                        android:paddingBottom="@dimen/_7sdp"
                        android:text="CLOSE"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/onetwo" />

                    <TextView
                        android:id="@+id/btnSubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/bg_orange_rounded_rectengle"
                        android:gravity="center"
                        android:paddingLeft="@dimen/twofive"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingRight="@dimen/twofive"
                        android:paddingBottom="@dimen/_7sdp"
                        android:text="SUBMIT"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/onetwo" />


                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


</RelativeLayout>