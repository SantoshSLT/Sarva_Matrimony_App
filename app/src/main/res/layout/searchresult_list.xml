<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/_7sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        card_view:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    >

                    <com.thegreentech.PorterShape.PorterShapeImageView
                        android:id="@+id/imgProfilePicture"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="left|center"
                        app:siShape="@drawable/image_round_background"
                        app:siSquare="true"
                        />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tvUserCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text=""
                        android:layout_gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/lightblack1" />

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/poppinsregular"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/_16sdp" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/poppinsregular"

                        android:text=""
                        android:textColor="@color/lightblack1"
                        android:textSize="@dimen/_10sdp" />


                    <!--   <Button
                           android:id="@+id/btnSendInterest"
                           android:layout_width="@dimen/onetwozero"
                           android:layout_height="@dimen/fourtwo"
                           android:layout_alignParentRight="true"
                           android:gravity="center"
                           android:layout_marginLeft="@dimen/onezero"
                           android:paddingLeft="@dimen/onefive"
                           android:text=" SEND INTEREST"
                           android:textSize="@dimen/onezero"
                           android:textColor="@color/colorRed"
                           android:background="@drawable/express_interest" />
       -->
                    <!--  <Button
                          android:id="@+id/btnRemaind"
                          android:layout_width="@dimen/onetwozero"
                          android:layout_height="@dimen/fourtwo"
                          android:gravity="center"
                          android:text=" REMINDER"
                          android:visibility="gone"
                          android:layout_alignParentRight="true"
                          android:paddingLeft="@dimen/onefive"
                          android:paddingRight="@dimen/onezero"
                          android:textColor="@color/colorWhite"
                          android:textSize="@dimen/onezero"
                          android:background="@drawable/express_interes_activet" />
      -->
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llShortlist"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/bg_orange_select"
                        android:gravity="center|top|left">

                        <ImageView
                            android:id="@+id/btnShortlist"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/_7sdp"
                            android:src="@drawable/icn_fav"
                            android:tint="@color/colorOrange" />
                    </LinearLayout>
                    <!--
                                        <TextView
                                            android:id="@+id/tvShortlist"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Shortlist"
                                            android:layout_gravity="center"
                                            android:gravity="center|top"
                                            android:textSize="@dimen/onezero"/>-->


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llBlock"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/bg_orange_select"
                        android:gravity="center|top|left">

                        <ImageView
                            android:id="@+id/btnBlock"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/_7sdp"
                            android:src="@drawable/icn_block"
                            android:tint="@color/colorOrange" />
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llInterest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/interest_round_bg"
                    android:gravity="right"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivInterest"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:paddingBottom="@dimen/_4sdp"
                        android:src="@drawable/ic_heart"
                        android:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvInterest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:fontFamily="@font/poppinsregular"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="Send Intrest"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>