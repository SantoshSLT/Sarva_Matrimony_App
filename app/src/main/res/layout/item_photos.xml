<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="@dimen/_140sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ProgressBar
                    android:id="@+id/progressBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/imgBusinessImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                     />
                <LinearLayout
                    android:id="@+id/lltext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@color/transcolorOrange1">
                <TextView
                    android:id="@+id/tvProfilePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/white"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey9"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgEdit"
                    android:layout_width="@dimen/fournine"
                    android:layout_height="@dimen/twozero"
                    android:layout_weight="1"
                    android:padding="@dimen/two"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:tint="@color/black" />

                <ImageView
                    android:id="@+id/imgDelete"
                    android:layout_width="@dimen/fournine"
                    android:layout_height="@dimen/twozero"
                    android:layout_marginLeft="@dimen/two"
                    android:layout_toRightOf="@+id/imgEdit"
                    android:layout_weight="1"
                    android:tint="@color/black"
                    android:padding="@dimen/two"
                    android:src="@drawable/ic_delete1" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>


