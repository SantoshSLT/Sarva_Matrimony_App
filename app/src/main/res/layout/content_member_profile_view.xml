<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgProfileImage"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/_45sdp"
                                android:layout_height="@dimen/_280sdp"
                                android:fitsSystemWindows="true"
                                android:scaleType="centerCrop"
                                app:layout_collapseMode="parallax" />

                            <TextView
                                android:id="@+id/tvPhotoRequest"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_green_rectengle"
                                android:fontFamily="@font/poppinsregular"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_20sdp"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingRight="@dimen/_20sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:text="REQUEST PHOTO"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_12sdp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom"
                                android:background="@color/lighttransparent"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/grey_shadow_gradiant">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.7"
                                        android:orientation="vertical"
                                        android:paddingTop="@dimen/_10sdp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/tvUserName"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/_10sdp"
                                                android:fontFamily="@font/poppins_semibold"
                                                android:text=""
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_16sdp" />

                                            <TextView
                                                android:id="@+id/tvMetriID"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="@dimen/_10sdp"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/poppins_semibold"
                                                android:paddingLeft="@dimen/_5sdp"
                                                android:text=""
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_10sdp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/tvAge"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="@dimen/_10sdp"
                                                android:fontFamily="@font/poppinsregular"
                                                android:text=""
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_10sdp" />

                                            <TextView
                                                android:id="@+id/tvheight"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/poppinsregular"
                                                android:text=""
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_10sdp" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_minus5sdp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/tvCaste"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/_10sdp"
                                                android:fontFamily="@font/poppinsregular"
                                                android:text=""
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_10sdp" />


                                            <TextView
                                                android:id="@+id/tvReligion"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/poppinsregular"
                                                android:text=""
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_10sdp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_minus5sdp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/tvCity"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/_10sdp"
                                                android:layout_marginBottom="@dimen/_10sdp"
                                                android:fontFamily="@font/poppinsregular"
                                                android:text=""
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_10sdp" />

                                            <TextView
                                                android:id="@+id/tvCountry"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/poppinsregular"
                                                android:text=""
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_10sdp" />


                                        </LinearLayout>

                                    </LinearLayout>

                                    <FrameLayout
                                        android:id="@+id/btnPhotos"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|center|end"
                                        android:padding="@dimen/_10sdp">

                                        <ImageView
                                            android:layout_width="@dimen/_35sdp"
                                            android:layout_height="@dimen/_35sdp"
                                            android:layout_gravity="center|bottom"
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:layout_marginRight="@dimen/_10sdp"
                                            android:layout_marginBottom="@dimen/_15sdp"
                                            android:src="@drawable/ic_photoes"
                                            android:tint="@color/white" />

                                        <TextView
                                            android:id="@+id/tvPhotoCounter"
                                            android:layout_width="@dimen/_25sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_alignRight="@+id/fab"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_gravity="right"
                                            android:background="@drawable/image_counter"
                                            android:elevation="7dp"
                                            android:fontFamily="@font/poppinsregular"
                                            android:gravity="center"
                                            android:paddingTop="@dimen/_5sdp"
                                            android:text="0"
                                            android:textColor="@color/white"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentBottom="true"
                                            android:layout_gravity="bottom|center"
                                            android:elevation="7dp"
                                            android:fontFamily="@font/poppinsregular"
                                            android:gravity="center|bottom"
                                            android:text="PHOTOES"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_10sdp" />

                                    </FrameLayout>


                                </LinearLayout>

                            </LinearLayout>

                        </FrameLayout>

                    </RelativeLayout>


                    <include layout="@layout/member_view_profile_card" />

                    <include layout="@layout/member_view_profile_partner" />


                </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>

</LinearLayout>
