<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="@dimen/_1sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/orange_card_border"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center"
                    android:paddingTop="@dimen/_10sdp"
                    android:text="platinum plan"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/tv_Rupees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="RS. 4657/-"
                    android:textColor="@color/lightblack1"
                    android:textSize="@dimen/_12sdp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@color/grey_1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/ll1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center"
                    android:text="Duration"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tvDurationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/lightblack1"
                    android:textSize="@dimen/_12sdp" />

                <Button
                    android:id="@+id/btnSelect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/orange_round_square"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="@dimen/twofive"
                    android:paddingRight="@dimen/twofive"
                    android:text="SELECT"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <!--  <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <TextView
                      android:id="@+id/textBuyNow"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/fourzero"
                      android:text="BUY NOW"
                      android:gravity="center"
                      android:textColor="@color/colorWhite"
                      android:background="@color/colorOrange"
                      android:textSize="@dimen/onefour"/>
              </LinearLayout>
  -->
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>


