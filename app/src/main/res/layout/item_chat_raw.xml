<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="visible">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/onezero"
                app:cardElevation="@dimen/four"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMmsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="@dimen/twotwozero"
                        android:paddingLeft="@dimen/onezero"
                        android:paddingTop="@dimen/five"
                        android:paddingRight="@dimen/onezero"
                        android:paddingBottom="@dimen/five"
                        android:text=""
                        android:textSize="@dimen/onethree" />

                    <TextView
                        android:id="@+id/tvMtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="@dimen/five"
                        android:alpha="0.35"
                        android:gravity="bottom"
                        android:paddingTop="@dimen/five"
                        android:paddingRight="@dimen/two"
                        android:paddingBottom="@dimen/two"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/eight" />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_10sdp">

                <com.thegreentech.PorterShape.PorterShapeImageView
                    android:id="@+id/ivSenderProfile"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="left|center"
                    app:siShape="@drawable/image_round_background"
                    app:siSquare="true" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFrd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp">

                <com.thegreentech.PorterShape.PorterShapeImageView
                    android:id="@+id/imgReciverProfile"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="left|center"
                    app:siShape="@drawable/image_round_background"
                    app:siSquare="true" />


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/onezero"
                app:cardElevation="@dimen/four"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFmsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxWidth="@dimen/twotwozero"
                        android:paddingLeft="@dimen/onezero"
                        android:paddingTop="@dimen/five"
                        android:paddingRight="@dimen/onezero"
                        android:paddingBottom="@dimen/five"
                        android:text=""
                        android:textSize="@dimen/onethree" />

                    <TextView
                        android:id="@+id/tvFtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="@dimen/five"
                        android:alpha="0.35"
                        android:gravity="bottom"
                        android:paddingTop="@dimen/five"
                        android:paddingRight="@dimen/two"
                        android:paddingBottom="@dimen/two"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/eight" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvChatdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llChat"
        android:layout_marginTop="@dimen/five"
        android:layout_marginBottom="@dimen/five"
        android:gravity="center"
        android:text="16/2/2019"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/oneone"
        android:visibility="gone" />
</RelativeLayout>